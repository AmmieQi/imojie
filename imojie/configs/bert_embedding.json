{
  "dataset_reader": {
    "target_namespace": "bert",
    "type": "copy_seq2seq",
    "source_tokenizer": {
      "type": "pretrained_transformer",
      "model_name": "bert-base-cased",
      "start_tokens": [],
      "end_tokens": [],
      "do_lowercase": false
    },
    "target_tokenizer": {
      "type": "pretrained_transformer",
      "model_name": "bert-base-cased",
      "start_tokens": [],
      "end_tokens": [],
      "do_lowercase": false
    },
    "source_token_indexers": {
      "tokens": {
        "type": "pretrained_transformer",
        "model_name": "bert-base-cased",
        "do_lowercase": false,
	    "namespace": "bert"
      }
    },
    "lazy": true,
    "bert": true,
    "max_tokens": 100
  },
  "vocabulary": {
   "directory_path": "trained_models/vocab/bert"
  },
  "train_data_path": "data/train/wiki5/sep_extrs/train_deb_data.tsv",
  "model": {
    "type": "copy_seq2seq_bahdanu",
    "bert": true,
    "source_namespace": "bert",
    "target_namespace": "bert",
    "source_embedder": {
      "token_embedders": {
        "tokens": {
	  "type": "pretrained_transformer",
	  "model_name": "bert-base-cased",
	  "requires_grad": false
        }
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 768,
      "hidden_size": 128,
      "num_layers": 3,
      "bidirectional": true,
      "dropout": 0.3
    },
    "attention": {
      "type": "linear",
      "tensor_1_dim": "256",
      "tensor_2_dim": "256",
      "activation": "tanh"
    },
    "decoder_layers": 3,
    "target_embedding_dim": 100,
    "beam_size": 5,
    "max_decoding_steps": 50
  },
  "iterator": {
    "type": "bucket",
    "padding_noise": 0.0,
    "batch_size" : 128,
    "maximum_samples_per_batch": ["num_tokens", 128*200],
    "sorting_keys": [["source_tokens", "num_tokens"]],
    "biggest_batch_first": true,
    "max_instances_in_memory": 100000,
    "instances_per_epoch": 1800000
  },
  "trainer": {
    "num_epochs": 20,
    "cuda_device": 0,
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    },
    "learning_rate_scheduler": {
      "type": "multi_step",
      "milestones": [20,30,35,40],
      "gamma": 0.5
    },
    "num_serialized_models_to_keep": 100
  }
}
